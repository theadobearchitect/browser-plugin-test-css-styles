{
	"name": "CSSTesting",
	"manifest_version": 2,
	"version": "1.7",

	"description": "A plugin to test various styles on your page.", 

	"icons": {
		"16": "img/16.png",
		"22": "img/22.png",
		"24": "img/24.png",
		"32": "img/32.png",
		"48": "img/48.png"
	},

	"options_page": "option.html",
	"background": { "page":"background.html" },

	"browser_action": {
		"default_icon": "img/16.png",
		"default_title": "CSSViewer"
	},

	"web_accessible_resources": [
		"img/header.png",
		"img/body.png",
		"img/list.png",
		"img/footer.png",
		"img/bullet.png",
		"data/*.json",
		"chrome-extension://*/data/*.json"
	],

	"permissions": [
		"tabs",
		"http://*/*", 
		"https://*/*", 
		"file://*/*", 		
		"contextMenus",		
		"storage"
	] ,
	"file_system_provider_capabilities": {
		"source": "network"
	}
}
